# Steel Onboarding Application Environment Configuration
# Copy this to .env and update with your production values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (PostgreSQL via Supabase)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Security Configuration
# Generate a secure random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here-replace-with-64-byte-random-string
BCRYPT_ROUNDS=12

# Email Configuration (Update with your SMTP settings)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@flawlesssteelwelding.com
EMAIL_PASS=your-app-password

# Notification Recipients
HR_EMAIL=tasha@fsw-denver.com
ADMIN_EMAIL=admin@flawlesssteelwelding.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# Session Configuration
SESSION_TIMEOUT=1800000
